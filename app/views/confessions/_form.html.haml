= form_for(@confession) do |f|
	- if @confession.errors.any?
		#error_explanation
			%h2 
				= pluralize(@confession.errors.count, "error")
				prohibited this confession from being saved:
				
			%ul
				- @confession.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label 'Soundcloud link'
		%br/
		= f.text_field :url

	.field
		= f.label :transcript
		%br/
		= f.text_field :transcript

	.field
		= f.label :feelings
		%br/
		= f.text_field :feelings

	.field
		%label{:for=>"tags"}Tags
		%br/
		%input#tags{:type=>"text", :name=>"tags"}
	
	.actions
		= f.submit

